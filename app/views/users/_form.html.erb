<div class="container">
  <div class="row justify-content-center" >
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-white rounded", local: true ) do |form| %>
        <div class="form-group row">
          <%= form.label :username, class: "col-2 col-form-label text-black" %>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Jhon Doe" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label text-black" %><br>
          <div class="col-10">
            <%= form.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "jhon@doe.com" %>
          </div>
        </div>
         <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label text-black" %><br>
          <div class="col-10">
            <%= form.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "*********" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= form.submit(@user.new_record? ? "Sign up!" : "Update account", class: "btn btn-outline-info btn-lg") %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to '[ Back ]', root_path %>
</div>
