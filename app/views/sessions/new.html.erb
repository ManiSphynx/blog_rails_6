<div id="page-content">
  <h1 class="text-center mt-4">Log in Alpha Blog</h1>
  <div class="container">
    <div class="row justify-content-center" >
      <div class="col-10">
        <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-white rounded", local: true ) do |form| %>
          <div class="form-group row">
            <%= form.label :email, class: "col-2 col-form-label text-black" %><br>
            <div class="col-10">
              <%= form.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your email" %>
            </div>
          </div>
          <div class="form-group row">
            <%= form.label :password, class: "col-2 col-form-label text-black" %><br>
            <div class="col-10">
              <%= form.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "*********" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= form.submit "Log in", class: "btn btn-outline-info btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
