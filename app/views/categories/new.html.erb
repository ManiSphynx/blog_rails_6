<div id="page-content">
  <h1 class="text-center mt-4">Create a new category</h1>
  <div class="container">
    <div class="row justify-content-center" >
      <div class="col-10">
        <%= render 'shared/errors', obj: @category %>
        <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-white rounded", local: true ) do |form| %>
          <div class="form-group row">
            <%= form.label :name, "Category name", class: "col-2 col-form-label text-black" %>
            <div class="col-10">
              <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "potato" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= form.submit class: "btn btn-outline-info btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
    <%= link_to '[ Back ]', root_path %>
  </div>
</div>
